<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Compagnie de voyage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top " style="background-color:#7EA0FF;color:white">
            <div class="navbar-header " style="background-color:#7EA0FF;color:white">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Compagnie de voyage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="background-color:#7EA0FF;color:white">
                <ul class="nav navbar-nav" style="color:white">
                    <li>@Html.ActionLink("Chauffeurs", "Index", "chauffeurs")</li>
                    <li>@Html.ActionLink("Véhicules", "Index", "Vehicules")</li>
                    <li>@Html.ActionLink("Voyages", "Index", "voyages")</li>
                    <li>@Html.ActionLink("Billets", "Index", "billets")</li>
                    <li>@Html.ActionLink("Membres", "Index", "Membres")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Compagnie de voyage</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
